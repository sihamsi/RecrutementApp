@model IEnumerable<Candidat>

@{
    ViewData["Title"] = " Candidatures";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3"> Candidatures</h1>
    </div>

    <!-- Liste des candidatures -->
    <div class="row g-4">
        @foreach (var candidat in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 offer-card shadow-sm border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="card-title mb-0">@candidat.Nom @candidat.Prenom</h5>
                        <small class="text-white-50">@candidat.Diplome</small>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column gap-2">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-user text-primary"></i>
                                <span>@candidat.Age ans</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-envelope text-primary"></i>
                                <span>@candidat.Email</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-file-pdf text-primary"></i>
                                <span>@candidat.CV</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@candidat.IdCandidat" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-2"></i>Voir détails
                            </a>
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .offer-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
    }

        .offer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(10, 26, 120, 0.1);
        }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }

    .btn-outline-primary {
        border-width: 2px;
    }
</style>
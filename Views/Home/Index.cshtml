}

<!-- Hero Section -->
<section class="hero bg-gradient-primary text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="display-3 fw-bold mb-4">
                    Trouvez le talent <br>
                    <span class="text-warning">ou l'opportunité</span> parfaite
                </h1>
                <p class="lead mb-4">
                    Plateforme de recrutement intelligente connectant les meilleurs talents
                    avec les entreprises innovantes
                </p>
                <div class="d-flex gap-3">
                    <a href="/Offres" class="btn btn-light btn-lg px-4 py-3">
                        <i class="fas fa-search me-2"></i>Trouver un emploi
                    </a>
                   

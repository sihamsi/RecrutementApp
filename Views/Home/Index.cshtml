<style>
    .hero {
        background: linear-gradient(135deg, #0a1a78 0%, #1a2b8a 100%);
    }

    .icon-lg {
        width: 70px;
        height: 70px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .category-card {
        transition: transform 0.3s ease;
        background: white;
    }

        .category-card:hover {
            transform: translateY(-5px);
            background: var(--bs-primary);
            color: white !important;
        }

    .job-card {
        transition: transform 0.3s ease;
    }

        .job-card:hover {
            transform: translateY(-3px);
        }

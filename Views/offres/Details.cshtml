@model E_Recrutement.Models.Offres
@using System.Security.Claims

@{
    ViewData["Title"] = "Détails de l'offre";
}

<div class="container mt-4">
    <!-- Add TempData alerts here -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">@Model.Poste</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Secteur</dt>
                        <dd class="col-sm-8">@Model.Secteur</dd>

                        <dt class="col-sm-4">Type de Contrat</dt>
                        <dd class="col-sm-8">@Model.TypeContrat</dd>

                        <dt class="col-sm-4">Profil Recherché</dt>
                        <dd class="col-sm-8">@Model.Profil</dd>

                        <dt class="col-sm-4">Rémunération</dt>
                        <dd class="col-sm-8">@Model.Remuneration MAD</dd>
                    </dl>
                </div>
            </div>
            @if (User.IsInRole("Candidat"))
            {
                if (ViewBag.DejaPostule)
                {
                    <button class="btn btn-secondary" disabled>
                        🗸 Déjà postulé
                    </button>
                }
                else
                {
                    <form asp-controller="Offres" asp-action="Postuler" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">
                            📤 Postuler maintenant
                        </button>
                    </form>
                }
            }
        </div>
    </div>
</div>
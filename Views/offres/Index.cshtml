@model IEnumerable<Offres>

<!DOCTYPE html>
<html>
<head>
    <title>Offres d'Emploi</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        .search-bar {
            margin-bottom: 20px;
        }
        .card {
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4">Offres de Stages et Premiers Emplois</h1>
        <p class="text-center">Trouvez les meilleures opportunités pour débuter votre carrière.</p>

        <!-- Barre de recherche -->
        <div class="row search-bar">
            <form method="get" class="d-flex flex-wrap">
                <div class="col-md-3 mb-2">
                    <input type="text" name="searchPoste" class="form-control" placeholder="Intitulé de poste ou mots-clés" />
                </div>
                <div class="col-md-3 mb-2">
                    <select name="secteur" class="form-select">
                        <option value="">Secteur</option>
                        <option value="Développement logiciel">Développement logiciel</option>
                        <option value="Analyse de données">Analyse de données</option>
                        <option value="Cybersécurité">Cybersécurité</option>
                    </select>
                </div>
                <div class="col-md-3 mb-2">
                    <select name="profil" class="form-select">
                        <option value="">Profil</option>
                        <option value="Ingénieur">Ingénieur</option>
                        <option value="Master">Master</option>
                        <option value="Licence">Licence</option>
                    </select>
                </div>
                <div class="col-md-3 mb-2">
                    <select name="remuneration" class="form-select">
                        <option value="">Rémunération</option>
                        <option value="10000">Moins de 10 000 MAD</option>
                        <option value="20000">Entre 10 000 et 20 000 MAD</option>
                        <option value="30000">Plus de 20 000 MAD</option>
                    </select>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </form>
        </div>

        <!-- Liste des offres -->
        <div class="row">
            @foreach (var offre in Model)
            {
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@offre.Poste</h5>
                            <p class="card-text">
                                <strong>Secteur :</strong> @offre.Secteur<br />
                                <strong>Profil :</strong> @offre.Profil<br />
                                <strong>Type de contrat :</strong> @offre.TypeContrat<br />
                                <strong>Rémunération :</strong> @offre.Remuneration MAD<br />
                            </p>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@offre.Id" class="btn btn-primary">Modifier</a>
                                <a asp-action="Delete" asp-route-id="@offre.Id" class="btn btn-danger">Supprimer</a>
                                <a href="#" class="btn btn-outline-primary">Voir les détails</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

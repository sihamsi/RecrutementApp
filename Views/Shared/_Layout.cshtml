<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Recrutement Pro</title>

    <!-- Bootstrap Custom Theme -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --bs-primary: #0a1a78;
            --bs-primary-rgb: 10, 26, 120;
            --bs-primary-dark: #081355;
            --bs-primary-light: #3b4ba5;
        }

        .bg-primary {
            background-color: var(--bs-primary) !important;
        }

        .btn-primary {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--bs-primary-dark);
                border-color: var(--bs-primary-dark);
                transform: translateY(-2px);
            }

        .navbar {
            padding: 1rem 0;
            box-shadow: 0 2px 15px rgba(10, 26, 120, 0.1);
            background: linear-gradient(90deg, var(--bs-primary) 0%, #1a2b8a 100%);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: 1px;
            color: white !important;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem !important;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .nav-link:hover,
            .nav-link.active {
                background: rgba(255, 255, 255, 0.15);
                color: white !important;
            }

        .footer {
            background: var(--bs-primary);
            color: rgba(255, 255, 255, 0.85);
            padding: 2rem 0;
            margin-top: 5rem;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(10, 26, 120, 0.1);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-handshake me-2"></i>E-Recrutement
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Offres" asp-action="Index">
                                <i class="fas fa-briefcase me-1"></i>Offres
                            </a>
                        </li>
                        @if (User.IsInRole("Candidat"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Candidature" asp-action="MesCandidatures">
                                    <i class="fas fa-file-alt me-1"></i>Mes Candidatures
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Recruteur"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Candidature" asp-action="MesCandidatures">
                                    <i class="fas fa-history me-1"></i>Historique
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Recruteur"))
                        {
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Candidature" asp-action="Statistiques">📊 Statistiques</a>
                        </li>
                        }

                        @if (User.IsInRole("Recruteur"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Candidature" asp-action="ListeOffresExternes">
                                    <i class="fas fa-external-link-alt"></i> Offres externes
                                </a>
                            </li>
                        }

                        
                        

                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-5">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container text-center">
            <div class="mb-3">
                <a href="#" class="text-white me-3"><i class="fab fa-linkedin fa-lg"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#" class="text-white"><i class="fab fa-facebook fa-lg"></i></a>
            </div>
            <p class="mb-0">
                &copy; 2025 E-Recrutement Pro -
                <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-underline">Confidentialité</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>